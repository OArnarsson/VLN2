@model Coder.Models.Entity.Comment


@using (Html.BeginForm("Create", "Comments", FormMethod.Post, new { id = "commentForm" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ProjectTaskId)
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Text, new { htmlAttributes = new { placeholder = "Write a comment...", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <noscript>
                    <input id="postCommentButton" type="submit" value="Post" class="btn btn-primary" />
                </noscript>
            </div>
        </div>
    </div>
}

@Scripts.Render("~/bundles/jqueryval")
