@model Coder.Models.ViewModels.ErrorViewModel
@{
    Layout = "_Layout.cshtml";
    ViewBag.Title = "Error";
}

<div class="http-error-box">
    <div class="container">
        <h2>@Model.StatusCode</h2>
        <h3>@Model.Message</h3>

        <div class="error-buttons">
            <a class="btn-lg btn-primary error-button" onclick="javascript:history.back()">Go back</a>
            <a class="btn-lg btn-primary error-button" href="mailto:scsoffice@ru.is">Contact us</a>
        </div>
    </div>
</div>

