<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Coder</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/theme.css")
    @Styles.Render("~/Content/font-awesome.min.css")
    @Styles.Render("~/Content/dropzonescss");
    <link href="~/Content/circle.css" rel="stylesheet" />
    <link href="~/Content/flipclock.css" rel="stylesheet" />
</head>
<body>
    <div id="header" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a id="headLogo" href="#"class="logo"><span class="logo">@Html.Raw(File.ReadAllText(Server.MapPath("~/Content/images/logo.svg")))</span></a>
                @Html.ActionLink("Coder", "Index", "Home", new { area = "" }, new { @class = "navbar-brand logoTitle" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Courses", "Index", "Courses")</li>
                    <li>@Html.ActionLink("Projects", "Index", "Projects")</li>
                    <li>@Html.ActionLink("Project Tasks", "Index", "ProjectTasks")</li>
                    <li>@Html.ActionLink("Submissions", "Index", "Submissions")</li>
                    @if (User.IsInRole("Administrator"))
                    {
                        <li>@Html.ActionLink("Users", "Index", "Users")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div id="main">
        <div class="container body-content">
            <div class="breadcrumbs">
                @Html.MvcSiteMap().SiteMapPath()
            </div>
            
            @RenderBody()
        </div>
    </div>
    <footer id="footer">
        <div class="container">
            <p>&copy; @DateTime.Now.Year - Coder</p>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")   
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/scripts/tinymce/tinymce.min.js")
    <script src="~/Scripts/flipclock.min.js"></script>
    <script src="~/Scripts/CountDown.js"></script>
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/scripts/site.js")
    @Scripts.Render("~/bundles/dropzonescripts");
</body>
</html>
