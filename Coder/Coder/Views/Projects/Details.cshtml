@model Coder.Models.Entity.Project

@{
    ViewBag.Title = "Details";
}

<div class="whiteBox">
    <h2 class="title">@Html.DisplayFor(model => model.Name)</h2>
    <h3 class="sub-title">@Html.ActionLink(Model.Course.Name, "Details", "Courses", new { id = Model.Course.Id }, null)</h3>

    @if (User.IsInRole("Administrator") || ViewBag.IsTeacher == true)
    {
        <a href=@Url.Action("Edit", "Projects", new { id = Model.Id })><i class="fa fa-pencil"></i></a>
        <a href=@Url.Action("Delete", "Projects", new { id = Model.Id })><i class="fa fa-trash"></i></a>
    }

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.Raw(Model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Start)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Start)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.End)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.End)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Value)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Value)
        </dd>

    </dl>

    <h2>Tasks</h2>
    <table class="coder-table">
        <thead>
            <tr>
                <th>Task</th>
                <th>@Html.DisplayNameFor(model => model.Value)</th>
                <th>Status</th>
                @if (User.IsInRole("Administrator") || ViewBag.IsTeacher == true)
                {
                    <th></th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ProjectTasks)
            {
                <tr>
                    <td>@Html.ActionLink(item.Name, "Details", "ProjectTasks", new { id = item.Id }, null)</td>
                    <td>@Html.DisplayFor(modelItem => item.Value)</td>
                    <td>Accepted</td>
                    <td>
                        @if (User.IsInRole("Administrator") || ViewBag.IsTeacher == true)
                        {
                            <a href=@Url.Action("Edit", "ProjectTasks", new { id = item.Id })><i class="fa fa-pencil"></i></a>
                            <a href=@Url.Action("Delete", "ProjectTasks", new { id = item.Id })><i class="fa fa-trash"></i></a>
                        }
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
