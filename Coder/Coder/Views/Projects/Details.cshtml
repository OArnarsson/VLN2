@model Coder.Models.Entity.Project

@{
    ViewBag.Title = @Html.Raw(Model.Name); ;
}

@section heading {
    <h1>@Model.Name</h1>
}

@section breadcrumbs {
    <ul>
        <li>@Html.ActionLink("Coder", "Index", "Home")</li>
        <li>@Html.ActionLink("Courses", "Index", "Courses")</li>
        <li>@Html.ActionLink(Model.Course.Name, "Details", "Courses", new { Id = Model.Course.Id }, null)</li>
        <li>@Html.ActionLink(Model.Name, "Details", "Projects", new { Id = Model.Id }, null)</li>
    </ul>
}

<div class="whiteBox">
    @if (User.IsInRole("Administrator") || ViewBag.IsTeacher == true)
    {
        <a class="btn btn-default" href=@Url.Action("Edit", "Projects", new { id = Model.Id })><i class="fa fa-pencil"></i>Edit project</a>
        <a class="btn btn-default" href=@Url.Action("Delete", "Projects", new { id = Model.Id })><i class="fa fa-trash"></i>Delete project</a>
    }

    <dl class="coder-dl">
        <dt>
            Course:
        </dt>
        <dd>
            @Html.ActionLink(Model.Course.Name, "Details", "Courses", new { id = Model.Course.Id }, null)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Start):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Start)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.End):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.End)
        </dd>

        <dt>
            Percentage of final grade:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Value) %
        </dd>
    </dl>

    <div>
        @Html.Raw(Model.Description)
    </div>

    
</div>

<div class="title-box">
    <div class="title-box-title">
        <h3>Tasks</h3>
    </div>
    <div class="title-box-content">
        <table class="coder-table coder-datatable">
            <thead>
                <tr>
                    <th>Task</th>
                    <th>@Html.DisplayNameFor(model => model.Value)</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ProjectTasks)
            {
                    <tr>
                        <td>@Html.ActionLink(item.Name, "Details", "ProjectTasks", new { id = item.Id }, null)</td>
                        <td>@Html.DisplayFor(modelItem => item.Value)</td>
                        <td>Accepted</td>
                        <td>
                            @if (User.IsInRole("Administrator") || ViewBag.IsTeacher == true)
                            {
                                <a href=@Url.Action("Edit", "ProjectTasks", new { id = item.Id })><i class="fa fa-pencil"></i></a>
                                <a href=@Url.Action("Delete", "ProjectTasks", new { id = item.Id })><i class="fa fa-trash"></i></a>
                            }
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>