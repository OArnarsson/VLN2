@model Coder.Models.Entity.Project

@{
    ViewBag.Title = "Details";
}

<h1> @Html.DisplayFor(model => model.Name)</h1>

@if (User.IsInRole("Administrator") || ViewBag.IsTeacher == true)
{
    <a href=@Url.Action("Edit", "Projects", new { id = Model.Id })><i class="fa fa-pencil"></i></a>
    <a href=@Url.Action("Delete", "Projects", new { id = Model.Id })><i class="fa fa-trash"></i></a>
}

<div>
    <h3> @Html.ActionLink(Model.Course.Name, "Details", "Courses", new { id = Model.Course.Id }, null) </h3>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.Raw(Model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Start)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Start)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.End)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.End)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Value)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Value)
        </dd>

    </dl>
</div>
<h2>Tasks</h2>
<table class="coder-table">
    <thead>
        <tr>
            <th>
                Task
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                Status
            </th>
            @if (ViewBag.Role == Coder.Models.Entity.CoderRole.Teacher || User.IsInRole("Administrator"))
            {
                <th>@*Edit/Delete*@</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProjectTasks)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "Details", "ProjectTasks", new { id = item.Id }, null)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    Accepted
                </td>
                <td>
                    @if (User.IsInRole("Administrator") || ViewBag.IsTeacher == true)
                    {
                        <a href=@Url.Action("Edit", "ProjectTasks", new { id = item.Id })><i class="fa fa-pencil"></i></a>
                        <a href=@Url.Action("Delete", "ProjectTasks", new { id = item.Id })><i class="fa fa-trash"></i></a>
                    }
                </td>
            </tr>
        }
    </tbody>

</table>
