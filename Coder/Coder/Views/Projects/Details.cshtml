@model Coder.Models.Entity.Project

@{
    ViewBag.Title = "Details";
}

<h1> @Html.DisplayFor(model => model.Name) <a href=@Url.Action("Edit", "Projects", new { id = Model.Id })><i class="fa fa-pencil"></i></a></h1>

<div>
    <h3> @Html.DisplayFor(model => model.Course.Name) </h3>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Start)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Start)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.End)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.End)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Value)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Value)
        </dd>

    </dl>
</div>
<h2>Tasks</h2>
<table class="coder-table">
    <thead>
        <tr>
            <th>
                Task
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            @if (ViewBag.Role == Coder.Models.Entity.CoderRole.Teacher || User.IsInRole("Administrator"))
            {
                <th>@*Edit/Delete*@</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProjectTasks)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "Details", "ProjectTasks", new { id = item.Id }, null)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                @if (ViewBag.Role == Coder.Models.Entity.CoderRole.Teacher || User.IsInRole("Administrator"))
                {
                    <td>
                        @Html.ActionLink("Edit", "Edit", "ProjectTasks", new { id = item.Id }, null) |
                        @Html.ActionLink("Delete", "Delete", "ProjectTasks", new { id = item.Id }, null)
                    </td>
                }
            </tr>
        }
    </tbody>

</table>