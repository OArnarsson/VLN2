@model IEnumerable<Coder.Models.Entity.Submission>

@{
    ViewBag.Title = "Submissions";
}

<h2>Submissions</h2>

<table class="coder-table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Task</th>
            <th>Submitted</th>
            <th>Project</th>
            <th>Course</th>
            <th>Status</th>
            @if (User.IsInRole("Administrator") || ViewBag.IsTeacher)
            {
                <th>Action</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@Html.DisplayFor(modelItem => item.Id)</th>
                <td>@Html.DisplayFor(modelItem => item.ProjectTask.Name)
                </td>
                <td>@Html.DisplayFor(modelItem => item.Created)</td>
                <td>@Html.DisplayFor(modelItem => item.ProjectTask.Project.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.ProjectTask.Project.Course.Name)</td>
                <td> @Html.DisplayFor(modelItem => item.Status)</td>
                @if (User.IsInRole("Administrator") || ViewBag.IsTeacher)
                {
                    <td><a href=@Url.Action("Delete", "Submissions", new { id = item.Id })><i class="fa fa-pencil"></i></a></td>
                }
            </tr>
        }
    </tbody>
</table>
