@model Coder.Models.Entity.Course

@{
    ViewBag.Title = @Html.DisplayFor(model => model.Name) + " Details";
}

<div class="course-details">
    <h2 id="UniqueValue"> @Html.DisplayFor(model => model.Name)</h2>
    <h3>@Html.DisplayFor(model => model.Title)</h3>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Start)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Start)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.End)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.End)
        </dd>
    </dl>

    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>

<div class="description-block">
    <h3>@Html.DisplayNameFor(model => model.Description)</h3>
    <p>@Html.DisplayFor(model => model.Description)</p>
</div>

<div>
    <h3>Projects</h3>
    <table class="table coderTable">
        <thead>
            <tr>
                <th>Project</th>
                <th></th>
            </tr>
        </thead>

        @foreach (var item in Model.Projects)
        {
            <tr>
                <td>@Html.ActionLink(item.Name, "Details", "Projects", new { id = item.Id }, null)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Projects", new { id = item.Id }, null) |
                    @Html.ActionLink("Details", "Details", "Projects", new { id = item.Id }, null) |
                    @Html.ActionLink("Delete", "Delete", "Projects", new { id = item.Id }, null)
                </td>
            </tr>
        }
    </table>
</div>
