@model IEnumerable<Coder.Models.Entity.Course>

@{
    ViewBag.Title = "Index";
}

<h2>Active courses</h2>

<p>@Html.ActionLink("Create New", "Create")</p>


<div class="allCourses">
    @foreach (var item in Model)
    {
        <div class="container">
            <h2>@Html.ActionLink(item.Name, "Details", new { id = item.Id }) (@Html.DisplayFor(modelItem => item.Title))</h2>
            <div class="col-lg-4">
                <p>@Html.DisplayFor(modelItem => item.Description)</p>
            </div>
            <div class="col-lg-8">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Project Name</th>
                            <th>Start date</th>
                            <th>End date</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td>Project NAME</td>
                            <td>@Html.DisplayFor(modelItem => item.Start)</td>
                            <td>@Html.DisplayFor(modelItem => item.End)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <hr>
    }
</div>