@{
    ViewBag.Title = "Dashboard";
}

@model Coder.Models.ViewModels.DashboardViewModel

<div class="row">
    <div class="allProjects col-lg-8 row">
        @foreach (var item in Model.Projects)
        {
            if (item.Value < 50)
            {
                ViewBag.color = "red";
            }
            else if (item.Value >= 50 && item.Value < 100)
            {
                ViewBag.color = "orange";
            }
            else if (item.Value == 100)
            {
                ViewBag.color = "green";
            }

            if (@item.End > DateTime.Now)
            {
                ViewBag.ActiveProject = "ActiveProject";
            }
            else
            {
                ViewBag.ActiveProject = "OldProject";
            }


            ViewBag.pvalue = "p" + @item.Value;

            <div class="col-md-4">
                <a href="@Url.Action("Details", "Projects", new { id=item.Id })">
                    <div class="projectBox">
                        <p class="name">@item.Name</p>
                        <span class="course">@item.Course.Title</span>

                        <div class="proContainer">
                            <div class="c100 center @ViewBag.pvalue small @ViewBag.color">
                                <span id="proText">@item.Value%</span>
                                <div class="slice">
                                    <div class="bar"></div>
                                    <div class="fill"></div>
                                </div>
                            </div>
                        </div>

                        <p class="value">Value: @item.Value %</p>

                        <div class="date">
                            <p class="col-lg-6 start">Start: @item.Start</p>
                            <p class="col-lg-6 end">End: @item.End</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>

    <div class="col-lg-4">
        <table class="table sideTable coderTable">
            <caption>Previous projects</caption>
