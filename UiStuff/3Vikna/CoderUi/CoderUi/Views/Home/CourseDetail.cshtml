@model IEnumerable<CoderUi.DummyModels.CoursesAndAssignments>
@{
    ViewBag.Title = "CourseDetail";
}



@foreach (var item in Model)
{
    <div class="row">
        <div class="col-md-6">
            <h2>@item.CourseName</h2>
            <p>@item.Description</p>
        </div>
        <div class="col-md-6">
            <h3>Contact info</h3>
            @foreach (var x in item.allUsers)
            {
                <h5>@x.role</h5>
                <h5>@x.name</h5>
                <h5>@x.email</h5>
                <hr />
            }
        </div>
    </div>

        <div class="container">            
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Project</th>
                            <th>Status</th>
                            <th>Start date</th>
                            <th>end date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var y in item.assignments)
                        {
                            <tr>
                                <td>@y.name</td>
                                <td>@y.status</td>
                                <td>@y.start</td>
                                <td>@y.end</td>
                            </tr>
                        }                        
                    </tbody>
                </table>            
        </div>
     
    
}
