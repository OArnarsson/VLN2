@model IEnumerable<CoderUi.Assignment>
@{
    ViewBag.Title = "Home Page";
}

<div class="main">
    <div class="row theBoxes">
        @foreach (var item in Model)
            {
            <div class="projectBox ">
                <p class="name">@item.name</p>
                <span class="course">@item.courseName</span>
                <p class="status">@item.status</p>
                
                <div class="progress">
                    <div class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: 70%;">
                        <span>70%</span>
                    </div>
                </div>

                <p class="value">Value: @item.value %</p>
                <p class="date col-lg-6 start">Start: @item.start</p>
                <p class="date col-lg-6 end">End: @item.end</p>
            </div>
        }
        <div />
    </div>
